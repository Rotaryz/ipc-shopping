border-none()
  &:before
    display: none
  &:after
    display: none

flex-fix()
  -ms-flex: 1 1 0.000000001px
  -webkit-box-flex: 1
  -webkit-flex: 1
  flex: 1
  -webkit-flex-basis: 0.000000001px
  flex-basis: 0.000000001px
  width: 1%

touch-active(type = orange)
  if (type == orange)
    &:active
      color: #fcc1a6
      background-color: rgba(250, 143, 84, .04)
  else
    &:active
      color: #c6c6c6
      background-color: rgba(0, 0, 0, .04)

hide-scrollbar()
  &::-webkit-scrollbar
    width: 0
    height: 0

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args

transition()
  vendor('transition', arguments)

transform()
  vendor('transform', arguments)

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

//  水平居中
row-center()
  left: 50%
  transform: translateX(-50%)

//垂直居中
col-center()
  top: 50%
  transform: translateY(-50%)

//  全居中
all-center()
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

//布局
layout($direction = column, $inline = block, $wrap = wrap)
  display: $inline == block ? flex:inline-flex
  flex-direction: $direction
  flex-wrap: $wrap

// 常规按钮
// $bg-c 背景色
normal-button-default($bg-c = $color-assist-34)
  height: 45px
  border-radius 3px
  background-color: $bg-c
  font-family: $font-family-regular
  font-size: $font-size-medium-x
  color: $color-background-ff
  text-align: center
  line-height: 45px
  letter-spacing: 0.64px

// 功能按钮
// $font-color 字体颜色 $border-color 边框颜色
// $font-color 不是默认样色,$border-color 同字体颜色
function-button($font-color = $color-assist-27, $border-color = $color-text-a4)
  display: inline-block
  padding: 4.5px 19.5px
  border-radius: 3px
  border: 0.5px solid $font-color == $color-assist-27 ? $border-color:$font-color
  font-family: $font-family-light
  font-size: $font-size-small
  color: $font-color

// 分割线-top
// $line-color 线的颜色, $line-left 距离父级元素左边的距离, $line-right 距离父级元素右边的距离
cut-off-rule-top($line-left = 0, $line-right = 0, $line-color = $color-cut-line-ed, $line-height = 0.5px)
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    height: 1px
    border-top: $line-height solid $line-color
    background-color: transparent
    top: 0
    left: $line-left
    right: $line-right

// 分割线-bottom
// $line-color 线的颜色, $line-left 距离父级元素左边的距离, $line-right 距离父级元素右边的距离
cut-off-rule-bottom($line-left = 0, $line-right = 0, $line-color = $color-cut-line-ed, $line-height = 0.5px)
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    height: 1px
    border-bottom: $line-height solid $line-color
    background-color: transparent
    //bottom: -1px
    bottom: 0
    left: $line-left
    right: $line-right

// 填充容器
fill-box()
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

// 竖线
vertical-line()
  position: relative
  &:before
    content: ''
    position: absolute
    left: 0
    height: 14px
    width: 2px
    box-sizing: border-box
    background-color: $color-assist-34
    top: 50%
    transform: translateY(-50%)

// 分割线-right
// $line-color 线的颜色, $line-top  距离父级元素顶的距离, $line-bottom 距离父级元素底的距离
cut-off-rule-right($line-top = 0, $line-bottom = 0, $line-color = $color-cut-line-ed)
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    widht: 1px
    border-right: 0.5px solid $line-color
    background-color: transparent
    right: -1px
    top: $line-top
    bottom: $line-bottom

// 信息牌icon
notice-icon($bg-color = rgba(255, 255, 255, 0.2))
  display: inline-block
  padding: 3px 6.5px 3px 7px
  background-color: $bg-color
  border-radius: 3px
